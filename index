    <script>
        // REPLACE THIS WITH YOUR PUBLISHED GOOGLE SHEET CSV URL
        const GOOGLE_SHEET_URL = 'YOUR_GOOGLE_SHEET_CSV_URL';
        
        // CORS Proxy to bypass browser restrictions
        const CORS_PROXY = 'https://api.allorigins.win/raw?url=';
        
        let etfData = [];

        function showSetupModal() {
            document.getElementById('setup-modal').classList.remove('hidden');
            const saved = localStorage.getItem('etf_sheet_url');
            if (saved) document.getElementById('sheet-url-input').value = saved;
        }

        function closeSetupModal() {
            document.getElementById('setup-modal').classList.add('hidden');
        }

        function saveSheetURL() {
            const url = document.getElementById('sheet-url-input').value.trim();
            if (url && url.includes('google.com/spreadsheets')) {
                localStorage.setItem('etf_sheet_url', url);
                closeSetupModal();
                location.reload();
            } else {
                alert('Please enter a valid Google Sheets published URL');
            }
        }

        // Check for saved URL
        const savedURL = localStorage.getItem('etf_sheet_url');
        const SHEET_URL = savedURL || GOOGLE_SHEET_URL;

        async function fetchData() {
            if (SHEET_URL === 'YOUR_GOOGLE_SHEET_CSV_URL' && !savedURL) {
                showSetupModal();
                return;
            }

            document.getElementById('refresh-icon').classList.add('fa-spin');
            document.getElementById('status-banner').classList.add('hidden');
            
            try {
                // Add timestamp to prevent caching
                const sheetUrlWithCache = SHEET_URL + '&t=' + new Date().getTime();
                
                // Use CORS proxy to bypass browser restrictions
                const proxyUrl = CORS_PROXY + encodeURIComponent(sheetUrlWithCache);
                
                console.log('Fetching from:', proxyUrl); // Debug log
                
                const response = await fetch(proxyUrl);
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const csvText = await response.text();
                console.log('Received data:', csvText.substring(0, 200)); // Debug log
                
                if (!csvText || csvText.trim().length === 0) {
                    throw new Error('Empty response');
                }
                
                const rows = csvText.trim().split('\n').slice(1); // Skip header
                
                if (rows.length === 0) {
                    throw new Error('No data rows found');
                }
                
                etfData = rows.map((row, index) => {
                    const cols = row.split(',').map(c => c.trim().replace(/^"|"$/g, '')); // Remove quotes
                    return {
                        code: cols[0] || '',
                        asset: cols[1] || '',
                        cmp: parseFloat(cols[2]) || 0,
                        dma: parseFloat(cols[3]) || 0,
                        diff: parseFloat(cols[4]) || 0,
                        change: parseFloat(cols[5]) || 0
                    };
                }).filter(etf => etf.code && etf.code.includes('NSE:'));

                if (etfData.length === 0) {
                    throw new Error('No valid ETF data parsed');
                }

                document.getElementById('last-updated').textContent = new Date().toLocaleTimeString('en-IN');
                updateDashboard();
                
            } catch (error) {
                console.error('Fetch error:', error);
                document.getElementById('error-message').textContent = 'Error: ' + error.message;
                document.getElementById('status-banner').classList.remove('hidden');
            }
            
            document.getElementById('refresh-icon').classList.remove('fa-spin');
        }

        function updateDashboard() {
            renderTopPicks();
            renderTable(etfData);
            updateStats();
        }

        function formatNumber(num) {
            return num ? num.toFixed(2) : '--';
        }

        function getSignal(change) {
            if (change <= -2) return { text: 'STRONG BUY', class: 'bg-green-500/20 text-green-400 border border-green-500/30', icon: 'fa-arrow-down' };
            if (change < 0) return { text: 'BUY', class: 'bg-green-500/10 text-green-300 border border-green-500/20', icon: 'fa-arrow-down' };
            if (change >= 6) return { text: 'SELL', class: 'bg-red-500/20 text-red-400 border border-red-500/30', icon: 'fa-arrow-up' };
            if (change > 2) return { text: 'HOLD', class: 'bg-yellow-500/20 text-yellow-400 border border-yellow-500/30', icon: 'fa-minus' };
            return { text: 'NEUTRAL', class: 'bg-gray-500/20 text-gray-400 border border-gray-500/30', icon: 'fa-minus' };
        }

        function renderTable(data) {
            const tbody = document.getElementById('etf-table-body');
            tbody.innerHTML = '';

            data.forEach((etf, index) => {
                const signal = getSignal(etf.change);
                const row = document.createElement('tr');
                row.className = 'table-row border-b border-gray-700/50 transition-all duration-200';
                if (etf.change <= -2) row.classList.add('bg-green-500/5');

                row.innerHTML = `
                    <td class="px-6 py-4 font-mono text-gray-400">#${index + 1}</td>
                    <td class="px-6 py-4 font-semibold text-blue-400 font-mono">${etf.code.replace('NSE:', '')}</td>
                    <td class="px-6 py-4 text-gray-300">${etf.asset}</td>
                    <td class="px-6 py-4 text-right font-mono font-semibold">₹${formatNumber(etf.cmp)}</td>
                    <td class="px-6 py-4 text-right font-mono text-gray-400">₹${formatNumber(etf.dma)}</td>
                    <td class="px-6 py-4 text-right font-mono ${etf.diff > 0 ? 'text-green-400' : 'text-red-400'}">${etf.diff > 0 ? '+' : ''}${formatNumber(etf.diff)}</td>
                    <td class="px-6 py-4 text-right font-mono font-bold ${etf.change > 0 ? 'positive' : 'negative'}">${etf.change > 0 ? '+' : ''}${formatNumber(etf.change)}%</td>
                    <td class="px-6 py-4 text-center">
                        <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-semibold ${signal.class}">
                            <i class="fas ${signal.icon}"></i> ${signal.text}
                        </span>
                    </td>
                `;
                tbody.appendChild(row);
            });

            document.getElementById('showing-count').textContent = data.length;
            document.getElementById('top-picks-loading').classList.add('hidden');
            document.getElementById('top-picks-container').classList.remove('hidden');
        }

        function renderTopPicks() {
            const buyOpportunities = etfData.filter(etf => etf.change <= -2).sort((a, b) => a.change - b.change).slice(0, 3);
            const container = document.getElementById('top-picks-container');
            
            container.innerHTML = buyOpportunities.map((etf, idx) => `
                <div class="top-pick rounded-xl p-5 relative overflow-hidden group cursor-pointer hover:scale-105 transition-transform duration-300">
                    <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-br from-green-400/20 to-transparent rounded-bl-full"></div>
                    <div class="relative z-10">
                        <div class="flex items-center justify-between mb-3">
                            <div class="flex items-center gap-2">
                                <div class="w-8 h-8 bg-green-500/20 rounded-full flex items-center justify-center text-green-400 font-bold">${idx + 1}</div>
                                <i class="fas fa-star text-yellow-400 animate-pulse"></i>
                            </div>
                            <span class="text-xs bg-green-500/20 text-green-300 px-2 py-1 rounded border border-green-500/30">BUY</span>
                        </div>
                        <h3 class="font-bold text-xl text-white font-mono mb-1">${etf.code.replace('NSE:', '')}</h3>
                        <p class="text-xs text-gray-400 mb-4">${etf.asset}</p>
                        <div class="space-y-2">
                            <div class="flex justify-between items-center">
                                <span class="text-xs text-gray-500">Discount</span>
                                <span class="text-xl font-bold text-red-400 font-mono">${formatNumber(etf.change)}%</span>
                            </div>
                            <div class="w-full bg-gray-700 rounded-full h-2">
                                <div class="bg-gradient-to-r from-red-500 to-orange-500 h-2 rounded-full" style="width: ${Math.min(Math.abs(etf.change) * 10, 100)}%"></div>
                            </div>
                            <div class="flex justify-between items-center pt-2 border-t border-gray-700/50">
                                <div>
                                    <p class="text-xs text-gray-500">CMP</p>
                                    <p class="text-lg font-semibold text-white font-mono">₹${formatNumber(etf.cmp)}</p>
                                </div>
                                <div class="text-right">
                                    <p class="text-xs text-gray-500">20 DMA</p>
                                    <p class="text-sm font-mono text-gray-400">₹${formatNumber(etf.dma)}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');
            
            if (buyOpportunities.length === 0) {
                container.innerHTML = `
                    <div class="col-span-3 text-center py-8 text-gray-500">
                        <i class="fas fa-search text-4xl mb-3 opacity-50"></i>
                        <p>No buy opportunities found currently</p>
                    </div>
                `;
            }
        }

        function updateStats() {
            document.getElementById('total-etfs').textContent = etfData.length;
            document.getElementById('positive-change').textContent = etfData.filter(etf => etf.change > 0).length;
            document.getElementById('negative-change').textContent = etfData.filter(etf => etf.change < 0).length;
            document.getElementById('buy-opportunities').textContent = etfData.filter(etf => etf.change <= -2).length;
        }

        function refreshData() {
            fetchData();
        }

        // Auto-refresh every 2 minutes
        setInterval(fetchData, 120000);

        // Initial load
        fetchData();
    </script>
</body>
</html>
